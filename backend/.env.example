
NODE_ENV=development
PORT=3001
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/?retryWrites=true&w=majority&appName=iot
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=50

# Socket Configuration
SOCKET_PORT=30012
ESP32_SOCKET_PORT=30013

# Logging
LOG_LEVEL=debug

# Google Calendar OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Set to your deployed backend callback URL
# e.g., https://your-backend.onrender.com/api/google-calendar/callback
GOOGLE_REDIRECT_URI=

# CORS / Frontend
# In production, set this to your deployed frontend origin (e.g., https://your-app.vercel.app)
# CORS: allowed frontend origins
# Prefer FRONTEND_URLS (comma-separated). Supports exact origins and simple wildcards in host:
#   Example exact: https://smartclassroom-lake.vercel.app
#   Example wildcard: https://*.vercel.app
# Multiple values (comma-separated) are supported.
FRONTEND_URLS=

# Legacy single origin (used if FRONTEND_URLS is empty)
FRONTEND_URL=
