
# Frontend Environment Variables
# Copy this file to .env.local and configure your values

# API Configuration
# Preferred single variable for both REST and Socket.IO base. Include the /api suffix for REST.
# Example for production (Render backend):
# VITE_API_URL=https://your-backend.onrender.com/api
# Example for local development (uncomment when running backend locally):
# VITE_API_URL=http://localhost:3001/api
# Optional: override websocket base (normally derived from VITE_API_URL by stripping /api)
# VITE_WEBSOCKET_URL=wss://your-backend.onrender.com

# Backward-compat (deprecated): if set, still read as fallback
# VITE_API_BASE_URL=

# Application Configuration
VITE_APP_NAME=IoT College Automation
VITE_APP_VERSION=1.0.0

# Backend (copy to backend/.env separately if needed)
PORT=3001
MONGODB_URI=mongodb://localhost:27017/dwell-control
JWT_SECRET=change_me_long_random
JWT_EXPIRE=7d
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=app-password-here
EMAIL_FROM=your-email@gmail.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=500

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Optional: Authentication Provider
VITE_AUTH_PROVIDER=jwt

# Optional: Theme Configuration
VITE_DEFAULT_THEME=dark
